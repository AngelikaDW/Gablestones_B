<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single list item -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height">

    <ImageView
        android:id="@+id/image_list_view"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"/>

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image_list_view"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/runningNumber"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#2B3D4D"
            tools:text="1"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/address"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="bottom"
            android:layout_toRightOf="@id/runningNumber"
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingLeft="8dp"
            android:textColor="#2B3D4D"
            tools:text="Stone Name" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/name"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#2B3D4D"
            tools:text="Streetname"
            android:layout_toRightOf="@+id/runningNumber"
            android:layout_toEndOf="@+id/runningNumber"
            android:paddingLeft="8dp"/>
        <TextView
            android:id="@+id/housenumber"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#2B3D4D"
            tools:text="#1"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/address"
            android:layout_toEndOf="@+id/address" />


    </RelativeLayout>
</RelativeLayout>


