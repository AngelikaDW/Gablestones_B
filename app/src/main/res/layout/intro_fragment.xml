<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        style="@style/AppTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_title"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:paddingBottom="@dimen/activity_horizontal_margin"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_gable_stones"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic_tour"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:paddingBottom="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explanation"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:paddingBottom="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_instruction1"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_instruction2"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_instruction3"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_enjoy"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:paddingBottom="@dimen/activity_horizontal_margin"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ams_houses"/>

    </LinearLayout>

</ScrollView>