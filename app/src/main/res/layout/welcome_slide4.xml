<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/screen_locate_user"
                android:layout_width="160dp"
                android:layout_height="300dp"
                android:src="@drawable/screen_locate_user"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/screen_map"
                android:layout_width="160dp"
                android:layout_toRightOf="@id/screen_locate_user"
                android:layout_height="300dp"
                android:src="@drawable/screen_map1"
                android:layout_marginLeft="16dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_4_title"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="@string/slide_4_desc"
            android:textAlignment="center"
            android:textSize="@dimen/slide_desc" />

    </LinearLayout>

</RelativeLayout>